<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu__student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yunk_.gisooksa.MenuActivity_Student">

    <Button
        android:text="상벌점 확인"
        android:id="@+id/view_student_btn"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:layout_height="60dp"
        android:layout_below="@+id/out_btn"
        android:layout_alignStart="@+id/qr_btn" />

    <Button
        android:text="회원정보 수정"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/access_btn"
        android:layout_alignTop="@+id/view_student_btn"
        android:layout_alignBottom="@+id/view_student_btn"
        android:layout_alignEnd="@+id/out_btn" />

    <Button
        android:text="QR코드 보기"
        android:layout_marginTop="53dp"
        android:id="@+id/qr_btn"
        android:layout_width="120dp"
        android:layout_marginStart="31dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="로그아웃"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/resign_btn"
        android:layout_below="@+id/access_btn"
        android:layout_alignStart="@+id/access_btn"
        android:layout_marginTop="23dp" />

    <TextView
        android:text="OOO학생 (O동 OOO호)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="외박신청"
        android:id="@+id/out_btn"
        android:layout_width="120dp"
        android:layout_marginEnd="38dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/qr_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/qr_btn" />

    <TextView
        android:text="현재상태 : 기숙사내부"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView58"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/out_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="외박신청내용"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/button26"
        android:layout_alignBaseline="@+id/resign_btn"
        android:layout_alignBottom="@+id/resign_btn"
        android:layout_alignStart="@+id/view_student_btn" />

</RelativeLayout>
